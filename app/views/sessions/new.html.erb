<div>
<% if flash[:alert] %>
<p id ="notice"><%= flash[:alert] %> </p>
<% end %>
<%= form_tag sessions_path, method: :developer do %>
<fieldset>
  <legend>Please Log In</legend>
  <div>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div>
    <%= submit_tag "Login" %>
  </div>
</fieldset>
<% end %>
</div>
