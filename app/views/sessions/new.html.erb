<div>
<% if flash[:error] %>
<p id ="notice"><%= flash[:error] %> </p>
<% end %>
<%= form_tag :action => :create do %>
<fieldset>
  <legend>Please Log In or <%= link_to 'Create New Developer', new_developer_path %></legend>
  <div>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div>
    <%= submit_tag "Login" %>
  </div>
</fieldset>
<% end %>
</div>
